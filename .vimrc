syntax on

set laststatus=2
set nocompatible

set number
set relativenumber
set cursorline
set ruler
set nowrap
set title
set spell

set tabstop=4
set shiftwidth=0
set expandtab
set autoindent
set smarttab

set scrolloff=10
set ignorecase
set incsearch
set hlsearch

set showmode
set showcmd

set encoding=utf-8

colorscheme retrobox
set background=dark

filetype on
filetype indent on

set path+=**
set wildmenu

set undodir=~/.vim_runtime/temp_dirs/undodir
set undofile
set nobackup

let mapleader = " "

